- content_for :header_css do
  = stylesheet_link_tag 'user'

.user_profile
  .user_info.clearfix
    .avatar
      = image_tag @user.avatar_url(:big)
    .info
      %p
        %span.user_name= @user.login
      %p
        %span.topics
          主题数:
          %em= @user.topics_count
      %p
        %span.downloads
          下载资源: 
          %em= @user.download_resources_count
      %p
        %a.btn{ :href => '#' } 申请创建剧集组


  .user_resources
    .nav_tabs.clearfix
      .topics.tab.active
        %a{ :href => '#' } 帖子
      .downloads.tab
        %a{ :href => '#' } 下载资源
      .at_me.tab
        %a{ :href => '#' } @我的
      .notifies.tab
        %a{ :href => '#' } 消息  

    .resources_content
      .topic_panel
        - @topics.each do |topic|
          .topic
            .above
              %a.from_drama{ :href => tv_drama_path(topic.tv_drama_id) }= "•#{topic.tv_drama.tv_name}•"
              %a.topic_name{ :href => topic_path(topic.id) }= topic.title
            .below
              %span 发表于
              %span.created_at 2012-09-10 12:00:39
              %span 最后由
              %a.user_name{ :href => '#' } fresh_fish
              %span 在 10 分钟前回复            
      .download_panel
      .at_me_panel
      .notifies_panel




