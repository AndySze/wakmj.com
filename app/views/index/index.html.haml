- content_for :header_css do
  = stylesheet_link_tag 'index'

.left_container
  .tv_list
    - @tv_dramas.each do |tv_drama|
      .tv
        .above.clearfix
          .cover
            %a{ :href => tv_drama_path(tv_drama.id) }
              = image_tag tv_drama.cover_url(:small)
          .tools
            .tv_name
              %a{ :href => tv_drama_path(tv_drama.id), :title => tv_drama.tv_name }= tv_drama.tv_name.truncate(10)
            .likes
              %a{ :href => tv_drama_path(tv_drama.id) }
                %span 喜欢
                %em= tv_drama.likes_count
            .topics
              %a{ :href => tv_drama_path(tv_drama.id) }
                %span 主题
                %em= tv_drama.topics_count
            .res
              %a{ :href => tv_drama_path(tv_drama.id) }
                %span 资源
                %em= tv_drama.download_resources_count

        .last_topic
          .user.clearfix
            .avatar
              %a{ :href => '#' }
                = image_tag 'sample.jpg', :size => '15x15'
            .topic
              %a{ :href => '#' } 浪漫主义者的悲歌——《阿拉伯的劳...

  .pagination_panel
    = will_paginate(@tv_dramas, :class => 'digg_pagination')
        
.right_container
  .tv_cates.dotted_bottom.clearfix
    %ul
      - TvCategory.all.each_with_index do |cate, index|
        %li{ :class => index == 0 ? 'active' : nil }
          %a{ :href => '#' }= cate.name

  .years.dotted_bottom.clearfix
    %ul
      - 2.times do
        %li
          %a.active{ :href => '#' } 1999
        %li
          %a{ :href => '#' } 2000
        %li
          %a{ :href => '#' } 2012
        %li
          %a{ :href => '#' } 2011            


  .tv_topics.dotted_bottom.article_list
    .title_bar
      %a.title{ :href => '#' } 最新帖子
      %a{ :href => '#' } 更多
    %ul
      - Topic.recent.each do |topic|
        %li 
          %a{ :href => topic_path(topic.id) }= topic.title
         
  .newest_tv
    .title_bar
      %a.title{ :href => '#' } 新剧时间表
      %a{ :href => '#' } 更多

    %ul
      - 4.times do
        %li
          %a{ :href => '#' }
            %span.time
              2012-09-15
            %span.title
              星球大战：克隆战争 
            %span.version S05E01
        %li
          %a{ :href => '#' }
            %span.time
              2012-11-20
            %span.title
              犯罪现场调查之纽约篇 
            %span.version S09E01

        %li
          %a{ :href => '#' }
            %span.time
              2012-12-23
            %span.title
              泽西制造 
            %span.version 
              S01E01             










        