- content_for :header_js do
  = javascript_include_tag 'lib/kindeditor/kindeditor-min', 'lib/kindeditor/lang/zh_CN'

.tv_detail.clearfix
  .new_drama_panel.common_form.rectangle_panel
    .panel_name
      %span 新建剧集组
    .form_panel
      = form_tag tv_dramas_path, :method => 'POST', :multipart => true do
        .blank_li.clearfix
          %span 剧名:
          %input.white_text.small{ :type => 'text', :name => 'drama[tv_name]' }
        .blank_li.clearfix
          %span 又名:
          %input.white_text.small{ :type => 'text', :name => 'drama[alias_name_list]' }
        .blank_li.clearfix          
          %span 电视台:
          %input.white_text.small{ :type => 'text', :name => 'drama[tv_station]' }          
        .blank_li.clearfix
          %span 主演:
          %input.white_text.small{ :type => 'text', :name => 'drama[actor_list]' }  
        .blank_li.clearfix
          %span 导演:
          %input.white_text.small{ :type => 'text', :name => 'drama[director_list]' }  
        .blank_li.clearfix
          %span 上映日期:
          %input.white_text.small{ :type => 'text', :name => 'drama[release_date]' }
        .blank_li.clearfix
          %span IMDB 评分:
          %input.white_text.small{ :type => 'text', :name => 'drama[imdb]' }
        .blank_li.clearfix
          %span 封面海报:
          %input{ :type => 'file', :name => 'drama[cover]' }
        .blank_li.clearfix
          %span 简介:
          %span{ :style => 'float:left;width:16px;' }
          %textarea.editor{ :name => 'drama[summary]' }
        .blank_li.clearfix
          %span &nbsp;
          %a.submit_btn{ :href => 'javascript:;' } 确定 

= render 'topics/editor_js'                                                                